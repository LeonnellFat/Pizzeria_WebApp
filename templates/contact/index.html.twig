{% extends 'base.html.twig' %}

{% block title %}Contact Us - Lee's Pizzeria{% endblock %}

{% block body %}
<section class="bg-white text-[#D62828] py-16 text-center">
  <h1 class="text-5xl font-bold mb-4" style="font-family: 'Lobster', cursive;">Contact Us</h1>
  <p class="text-lg">We'd love to hear from you! Get in touch with us today.</p>
</section>

<section class="bg-gray-50">
  <div class="max-w-6xl mx-auto px-6 grid grid-cols-1 md:grid-cols-2 gap-8">

    <!-- Location -->
    <div class="bg-white border border-red-200 rounded-2xl p-8 flex items-start space-x-4 shadow-sm hover:shadow-md transition">
      <div class="bg-[#D62828] text-white p-3 rounded-xl">
        <i class="fa-solid fa-location-dot text-2xl"></i>
      </div>
      <div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Our Location</h2>
        <p class="text-gray-700 leading-relaxed">
          123 Pizza Street<br>
          Little Italy, NY 10013<br>
          United States
        </p>
      </div>
    </div>

    <!-- Phone -->
    <div class="bg-white border border-red-200 rounded-2xl p-8 flex items-start space-x-4 shadow-sm hover:shadow-md transition">
      <div class="bg-[#D62828] text-white p-3 rounded-xl">
        <i class="fa-solid fa-phone text-2xl"></i>
      </div>
      <div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Phone</h2>
        <p class="text-gray-700 leading-relaxed">
          (212) 555-1234<br>
          <span class="text-sm text-gray-500">Call us for reservations or takeout orders</span>
        </p>
      </div>
    </div>

    <!-- Email -->
    <div class="bg-white border border-red-200 rounded-2xl p-8 flex items-start space-x-4 shadow-sm hover:shadow-md transition">
      <div class="bg-[#D62828] text-white p-3 rounded-xl">
        <i class="fa-solid fa-envelope text-2xl"></i>
      </div>
      <div>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Email</h2>
        <p class="text-gray-700 leading-relaxed">
          info@leespizzeria.com<br>
          <span class="text-sm text-gray-500">We'll respond within 24 hours</span>
        </p>
      </div>
    </div>

    <!-- Opening Hours -->
    <div class="bg-white border border-red-200 rounded-2xl p-8 flex items-start space-x-4 shadow-sm hover:shadow-md transition">
      <div class="bg-[#D62828] text-white p-3 rounded-xl">
        <i class="fa-solid fa-clock text-2xl"></i>
      </div>
      <div class="w-full">
        <h2 class="text-xl font-semibold text-gray-900 mb-2">Opening Hours</h2>
        <div class="flex justify-between text-gray-700">
          <p>Monday - Thursday</p><p>11:00 AM - 10:00 PM</p>
        </div>
        <div class="flex justify-between text-gray-700">
          <p>Friday - Saturday</p><p>11:00 AM - 11:00 PM</p>
        </div>
        <div class="flex justify-between text-gray-700">
          <p>Sunday</p><p>12:00 PM - 9:00 PM</p>
        </div>
      </div>
    </div>

  </div>
</section>
{% endblock %}
