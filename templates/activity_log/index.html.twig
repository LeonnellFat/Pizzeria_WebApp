{% extends '_admin_layout.html.twig' %}

{% block title %}Activity Logs{% endblock %}

{% block page_title %}Activity Logs{% endblock %}
{% block page_subtitle %}View and filter system activity logs{% endblock %}

{% block admin_content %}
<div class="space-y-6">
  <!-- Filter Section -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">Filters</h3>
    
    <form method="GET" class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <!-- Username Filter -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Username</label>
        <input type="text" name="filterUser" value="{{ filterUser }}" placeholder="Search username..." 
               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#D62828]">
      </div>

      <!-- Action Filter -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Action</label>
        <select name="filterAction" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#D62828]">
          <option value="">All Actions</option>
          {% for action in availableActions %}
            <option value="{{ action }}" {% if filterAction == action %}selected{% endif %}>{{ action }}</option>
          {% endfor %}
        </select>
      </div>

      <!-- Date Filter -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Date</label>
        <input type="date" name="filterDate" value="{{ filterDate }}" 
               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#D62828]">
      </div>

      <!-- Submit Button -->
      <div class="flex items-end">
        <button type="submit" class="w-full bg-[#D62828] text-white font-semibold px-4 py-2 rounded-lg hover:bg-red-700 transition">
          Filter
        </button>
      </div>
    </form>
  </div>

  <!-- Logs Table -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="px-6 py-4 bg-gray-50 border-b">
      <h3 class="text-lg font-semibold text-gray-800">All Activity Logs ({{ total }} total)</h3>
    </div>

    {% if logs is not empty %}
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-100 border-b">
            <tr>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Username</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Role</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Action</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Affected Data</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Date & Time</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">IP Address</th>
            </tr>
          </thead>
          <tbody>
            {% for log in logs %}
              <tr class="border-b hover:bg-gray-50 transition">
                <td class="px-6 py-4 text-sm text-gray-900">
                  <span class="font-medium">{{ log.username }}</span>
                </td>
                <td class="px-6 py-4 text-sm">
                  <span class="px-3 py-1 rounded-full bg-blue-100 text-blue-800 text-xs font-medium">
                    {{ log.role }}
                  </span>
                </td>
                <td class="px-6 py-4 text-sm">
                  {% set actionColor = 'bg-green-100 text-green-800' %}
                  {% if log.action == 'UPDATE' %}
                    {% set actionColor = 'bg-yellow-100 text-yellow-800' %}
                  {% elseif log.action == 'DELETE' %}
                    {% set actionColor = 'bg-red-100 text-red-800' %}
                  {% elseif log.action == 'LOGIN' %}
                    {% set actionColor = 'bg-blue-100 text-blue-800' %}
                  {% elseif log.action == 'LOGOUT' %}
                    {% set actionColor = 'bg-gray-100 text-gray-800' %}
                  {% endif %}
                  <span class="px-3 py-1 rounded-full {{ actionColor }} text-xs font-medium">
                    {{ log.action }}
                  </span>
                </td>
                <td class="px-6 py-4 text-sm text-gray-600">
                  {{ log.targetData }}
                </td>
                <td class="px-6 py-4 text-sm text-gray-600">
                  {{ log.dateTime ? log.dateTime.format('Y-m-d H:i:s') : 'N/A' }}
                </td>
                <td class="px-6 py-4 text-sm text-gray-600">
                  <code class="bg-gray-100 px-2 py-1 rounded text-xs">{{ log.ipAddress ?? 'N/A' }}</code>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      {% if totalPages > 1 %}
        <div class="px-6 py-4 bg-gray-50 border-t flex justify-between items-center">
          <div class="text-sm text-gray-600">
            Showing page {{ page }} of {{ totalPages }}
          </div>
          <div class="flex gap-2">
            {% if page > 1 %}
              <a href="{{ path('app_activity_log_index', {'page': page - 1, 'filterUser': filterUser, 'filterAction': filterAction, 'filterDate': filterDate}) }}" 
                 class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100 transition">
                Previous
              </a>
            {% endif %}
            
            {% for p in 1..totalPages %}
              {% if p == page %}
                <span class="px-4 py-2 bg-[#D62828] text-white rounded-lg">{{ p }}</span>
              {% else %}
                <a href="{{ path('app_activity_log_index', {'page': p, 'filterUser': filterUser, 'filterAction': filterAction, 'filterDate': filterDate}) }}" 
                   class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100 transition">
                  {{ p }}
                </a>
              {% endif %}
            {% endfor %}
            
            {% if page < totalPages %}
              <a href="{{ path('app_activity_log_index', {'page': page + 1, 'filterUser': filterUser, 'filterAction': filterAction, 'filterDate': filterDate}) }}" 
                 class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100 transition">
                Next
              </a>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% else %}
      <div class="px-6 py-12 text-center text-gray-500">
        <p class="text-lg">No activity logs found.</p>
      </div>
    {% endif %}
  </div>
</div>
{% endblock %}
