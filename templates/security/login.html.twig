{% extends 'base_login.html.twig' %}

{% block title %}Login - Lee's Pizzeria{% endblock %}

{% block body %}
<style>
  body {
    overflow: hidden;
    height: 100vh;
  }
  .lobster {
    font-family: 'Lobster', cursive;
  }
</style>

<div class="min-h-screen bg-gradient-to-br from-[#D62828] to-[#A01818] flex items-center justify-center p-6">
  <div class="w-full max-w-md">
    <!-- Login Card -->
    <div class="bg-white rounded-3xl shadow-2xl p-8">
      {% if error %}
        <div class="mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded">
          <p class="text-red-700 font-medium">
            {% if error.messageKey == 'This account has been deactivated.' or 'deactivated' in error.message|lower %}
              This account has been deactivated.
            {% else %}
              {{ error.messageKey|trans(error.messageData, 'security') }}
            {% endif %}
          </p>
        </div>
      {% endif %}

      {% if app.user %}
        <div class="mb-6 bg-green-50 border-l-4 border-green-500 p-4 rounded">
          <p class="text-green-700 font-medium">You are logged in as <strong>{{ app.user.userIdentifier }}</strong></p>
          <a href="{{ path('app_logout') }}" class="text-green-600 hover:text-green-700 text-sm font-semibold">Logout</a>
        </div>
      {% endif %}

      <!-- Title -->
      <div class="text-center mb-8">
        <h1 class="lobster text-5xl text-[#D62828] mb-2">Lee's Pizzeria</h1>
      </div>

      <form method="post">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Sign In</h2>

        <!-- Username Field -->
        <div class="mb-5">
          <label for="inputUsername" class="block text-gray-700 font-semibold mb-2">Username</label>
          <input 
            type="text" 
            value="{{ last_username }}" 
            name="username" 
            id="inputUsername" 
            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-[#D62828] transition"
            autocomplete="username" 
            required 
            autofocus
            placeholder="Enter your username">
        </div>

        <!-- Password Field -->
        <div class="mb-6">
          <label for="inputPassword" class="block text-gray-700 font-semibold mb-2">Password</label>
          <input 
            type="password" 
            name="password" 
            id="inputPassword" 
            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-[#D62828] transition"
            autocomplete="current-password" 
            required
            placeholder="Enter your password">
        </div>

        <!-- CSRF Token -->
        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

        <!-- Sign In Button -->
        <button 
          class="w-full bg-[#D62828] text-white font-bold py-3 px-4 rounded-lg hover:bg-red-700 transition transform hover:scale-105 mb-4"
          type="submit">
          Sign In
        </button>

        <!-- Footer -->
        <div class="text-center mt-6 pt-6 border-t border-gray-200">
          <p class="text-gray-600 text-sm">Â© {{ "now"|date("Y") }} Lee's Pizzeria. All rights reserved.</p>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}
