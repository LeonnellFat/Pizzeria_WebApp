<form method="post" 
      action="{{ path('app_staff_pizza_delete', {'id': pizza.id}) }}" 
      onsubmit="return confirm('Are you sure you want to delete this pizza?');"
      class="inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pizza.id) }}">
    <button class="p-2 rounded-md border border-red-500 text-red-600 hover:bg-red-100 transition" title="Delete Pizza">
        🗑️
    </button>
</form>
