{% extends 'base_staff.html.twig' %}

{% block body %}
<div class="flex bg-gray-50 min-h-screen">

  <!-- Sidebar -->
  <aside class="fixed left-0 top-0 w-64 h-screen bg-white shadow-lg border-r overflow-y-auto">
    <div class="p-6 border-b">
      <h1 class="text-2xl font-bold text-[#D62828]">Staff Panel</h1>
      <p class="text-gray-500 text-sm mt-1">Manage orders and inventory</p>
    </div>

    <nav class="mt-6 flex flex-col space-y-2 px-4">
      <!-- Orders Management -->
      <a href="{{ path('app_staff_order_index') }}"
         class="flex items-center gap-3 px-4 py-3 rounded-lg font-semibold transition {{ app.request.attributes.get('_route') starts with 'app_staff_order' ? 'bg-[#D62828] text-white shadow' : 'text-gray-700 hover:bg-gray-100' }}">
        ğŸ“¦ Orders
      </a>

      <!-- Inventory Management -->
      <a href="{{ path('app_staff_inventory') }}"
         class="flex items-center gap-3 px-4 py-3 rounded-lg font-semibold transition {{ app.request.attributes.get('_route') starts with 'app_staff_inventory' ? 'bg-[#D62828] text-white shadow' : 'text-gray-700 hover:bg-gray-100' }}">
        ğŸ“¦ Inventory
      </a>

      <!-- Pizza Management -->
      <a href="{{ path('app_staff_pizza_index') }}"
         class="flex items-center gap-3 px-4 py-3 rounded-lg font-semibold transition {{ app.request.attributes.get('_route') starts with 'app_staff_pizza' ? 'bg-[#D62828] text-white shadow' : 'text-gray-700 hover:bg-gray-100' }}">
        ğŸ• Pizzas
      </a>

      <!-- Category Management -->
      <a href="{{ path('app_staff_category_index') }}"
         class="flex items-center gap-3 px-4 py-3 rounded-lg font-semibold transition {{ app.request.attributes.get('_route') starts with 'app_staff_category' ? 'bg-[#D62828] text-white shadow' : 'text-gray-700 hover:bg-gray-100' }}">
        ğŸ·ï¸ Categories
      </a>

      <!-- Ingredient Management -->
      <a href="{{ path('app_staff_ingredient_index') }}"
         class="flex items-center gap-3 px-4 py-3 rounded-lg font-semibold transition {{ app.request.attributes.get('_route') starts with 'app_staff_ingredient' ? 'bg-[#D62828] text-white shadow' : 'text-gray-700 hover:bg-gray-100' }}">
        ğŸ§‚ Ingredients
      </a>

      <!-- Divider -->
      <hr class="my-4 border-gray-200">

      <!-- My Profile -->
      <a href="{{ path('app_staff_myprofile') }}"
         class="flex items-center gap-3 px-4 py-3 rounded-lg font-semibold transition {{ app.request.attributes.get('_route') starts with 'app_staff_myprofile' ? 'bg-[#D62828] text-white shadow' : 'text-gray-700 hover:bg-gray-100' }}">
        âš™ï¸ My Profile
      </a>

      <!-- Logout -->
      <a href="{{ path('app_logout') }}"
         class="flex items-center gap-3 px-4 py-3 rounded-lg font-semibold transition text-gray-700 hover:bg-red-50 hover:text-[#D62828]">
        ğŸšª Logout
      </a>
    </nav>
  </aside>

  <!-- Main Content -->
  <main class="flex-1 ml-64">
    <!-- Header -->
    <header class="bg-[#D62828] text-white py-8 px-10 shadow">
      <h1 class="text-4xl font-bold mb-1">{% block page_title %}{% endblock %}</h1>
      <p class="text-white/90 text-lg">{% block page_subtitle %}{% endblock %}</p>
    </header>

    <!-- Flash Messages -->
    {% for label, messages in app.flashes %}
      {% if label == 'success' %}
        <div class="max-w-7xl mx-auto mt-6 px-6">
          {% for message in messages %}
            <div class="p-4 bg-green-50 border-l-4 border-green-500 rounded text-green-700">
              <p class="font-semibold">âœ“ Success</p>
              <p>{{ message }}</p>
            </div>
          {% endfor %}
        </div>
      {% elseif label == 'error' %}
        <div class="max-w-7xl mx-auto mt-6 px-6">
          {% for message in messages %}
            <div class="p-4 bg-red-50 border-l-4 border-[#D62828] rounded text-red-700">
              <p class="font-semibold">âœ— Error</p>
              <p>{{ message }}</p>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    {% endfor %}

    <!-- Content Section -->
    <section class="max-w-7xl mx-auto mt-8 px-6">
      {% block staff_content %}{% endblock %}
    </section>
  </main>
</div>
{% endblock %}
