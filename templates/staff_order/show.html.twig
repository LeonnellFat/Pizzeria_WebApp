{% extends '_staff_layout.html.twig' %}

{% block title %}Order Details{% endblock %}

{% block page_title %}Order #{{ order.id }}{% endblock %}
{% block page_subtitle %}Customer order details and items{% endblock %}

{% block staff_content %}
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
  <!-- Customer Information Card -->
  <div class="lg:col-span-2 bg-white rounded-lg shadow-lg p-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Customer Information</h2>
    
    <div class="space-y-4">
      <div class="flex justify-between py-3 border-b">
        <span class="text-gray-600 font-medium">Customer Name:</span>
        <span class="text-gray-900 font-semibold">{{ order.customerName }}</span>
      </div>
      <div class="flex justify-between py-3 border-b">
        <span class="text-gray-600 font-medium">Phone:</span>
        <span class="text-gray-900 font-semibold">{{ order.customerPhone }}</span>
      </div>
      <div class="flex justify-between py-3 border-b">
        <span class="text-gray-600 font-medium">Address:</span>
        <span class="text-gray-900 font-semibold">{{ order.customerAddress }}</span>
      </div>
      <div class="flex justify-between py-3 border-b">
        <span class="text-gray-600 font-medium">Order Date:</span>
        <span class="text-gray-900 font-semibold">{{ order.createdAt ? order.createdAt|date('M d, Y H:i') : 'N/A' }}</span>
      </div>
      <div class="flex justify-between py-3">
        <span class="text-gray-600 font-medium">Status:</span>
        <span class="px-4 py-1 rounded-full font-semibold text-white 
          {% if order.status == 'On Process' or order.status == 'Preparing' %}
            bg-yellow-500
          {% elseif order.status == 'Completed' %}
            bg-purple-500
          {% elseif order.status == 'Delivered' %}
            bg-green-500
          {% elseif order.status == 'Cancelled' %}
            bg-red-500
          {% endif %}
        ">{{ order.status }}</span>
      </div>
    </div>
  </div>

  <!-- Order Summary Card -->
  <div class="bg-white rounded-lg shadow-lg p-8 border-l-4 border-[#D62828]">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Order Summary</h2>
    
    <div class="space-y-4">
      <div class="flex justify-between py-3 border-b">
        <span class="text-gray-600">Total Items:</span>
        <span class="text-2xl font-bold text-[#D62828]">{{ order.totalQuantity }}</span>
      </div>
      <div class="flex justify-between py-3">
        <span class="text-gray-600">Total Amount:</span>
        <span class="text-3xl font-bold text-green-600">${{ order.totalPrice|number_format(2) }}</span>
      </div>
    </div>
  </div>
</div>

<!-- Order Items Table -->
<div class="bg-white rounded-lg shadow-lg overflow-hidden mb-6">
  <div class="p-6 border-b border-gray-200">
    <h2 class="text-2xl font-bold text-gray-800">Order Items</h2>
  </div>

  {% if order.orderItems|length > 0 %}
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-100 border-b">
          <tr>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Item</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Type</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Quantity</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Unit Price</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Subtotal</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Ingredients</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          {% for item in order.orderItems %}
            <tr class="hover:bg-gray-50 transition">
              <td class="px-6 py-4 text-sm font-medium text-gray-900">
                {% if item.pizza %}
                  {{ item.pizza.name }}
                {% else %}
                  Custom Pizza
                {% endif %}
              </td>
              <td class="px-6 py-4 text-sm">
                <span class="px-3 py-1 rounded-full text-xs font-semibold 
                  {% if item.isCustom %}
                    bg-blue-100 text-blue-700
                  {% else %}
                    bg-gray-100 text-gray-700
                  {% endif %}
                ">
                  {% if item.isCustom %}Custom{% else %}Standard{% endif %}
                </span>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900">{{ item.quantity }}</td>
              <td class="px-6 py-4 text-sm text-gray-600">${{ item.finalPrice|number_format(2) }}</td>
              <td class="px-6 py-4 text-sm font-semibold text-green-600">${{ (item.finalPrice * item.quantity)|number_format(2) }}</td>
              <td class="px-6 py-4 text-sm">
                {% if item.orderItemIngredients|length > 0 %}
                  <details class="cursor-pointer">
                    <summary class="text-blue-600 hover:text-blue-800 font-medium">
                      View ({{ item.orderItemIngredients|length }})
                    </summary>
                    <div class="mt-3 space-y-1 bg-gray-50 p-3 rounded">
                      {% for ingredient in item.orderItemIngredients %}
                        <p class="text-sm text-gray-700">
                          • {{ ingredient.ingredient.name }}: {{ ingredient.quantity }} unit(s)
                        </p>
                      {% endfor %}
                    </div>
                  </details>
                {% else %}
                  <span class="text-gray-500">No additions</span>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% else %}
    <div class="p-6 text-center">
      <p class="text-gray-600 text-lg">No items in this order.</p>
    </div>
  {% endif %}
</div>

<!-- Action Buttons -->
<div class="flex justify-between items-center">
  <a href="{{ path('app_staff_order_index') }}" 
     class="px-4 py-2 rounded-md border border-gray-300 text-gray-700 hover:bg-gray-100 transition font-medium">
    ← Back to Orders
  </a>

  {% if order.createdBy == app.user %}
    <form method="POST" action="{{ path('app_staff_order_delete', {'id': order.id}) }}" class="inline" onsubmit="return confirm('Are you sure you want to delete this order?');">
      <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
      <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition font-medium">
        Delete Order
      </button>
    </form>
  {% else %}
    <div class="p-4 bg-yellow-50 border-l-4 border-yellow-500 rounded text-yellow-700">
      <p class="font-semibold">⚠️ Read-Only</p>
      <p class="text-sm">This order was created by an admin and cannot be edited or deleted.</p>
    </div>
  {% endif %}
</div>
{% endblock %}
