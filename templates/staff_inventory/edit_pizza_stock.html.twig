{% extends '_staff_layout.html.twig' %}

{% block page_title %}Edit Pizza Stock{% endblock %}
{% block page_subtitle %}Update stock quantity for {{ pizzaStock.pizza.name }}{% endblock %}

{% block staff_content %}

<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg shadow-lg p-8">
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-2">üçï {{ pizzaStock.pizza.name }}</h2>
      <p class="text-gray-600">Update the stock quantity for this pizza</p>
    </div>

    <form method="POST" class="space-y-6">
      <!-- Current Stock Info -->
      <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded">
        <p class="text-blue-700 font-semibold">Current Stock: <span class="text-2xl text-blue-600">{{ pizzaStock.quantity }}</span></p>
      </div>

      <!-- Quantity Input -->
      <div>
        <label for="quantity" class="block text-gray-700 font-semibold mb-3">New Quantity</label>
        <input 
          type="number" 
          id="quantity" 
          name="quantity" 
          value="{{ pizzaStock.quantity }}" 
          min="0"
          required
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#D62828] focus:border-transparent"
          placeholder="Enter new stock quantity"
        >
        <p class="text-gray-500 text-sm mt-2">Enter the total quantity you want to set for this pizza.</p>
      </div>

      <!-- Reorder Level Display -->
      <div class="bg-gray-50 p-4 rounded-lg">
        <label class="text-gray-700 font-semibold block mb-2">Reorder Level</label>
        <p class="text-xl font-bold text-gray-800">{{ pizzaStock.reorderLevel ?? 'Not Set' }}</p>
        <p class="text-gray-500 text-sm mt-1">Stock will be flagged as low when it reaches this level.</p>
      </div>

      <!-- Additional Info -->
      <div class="grid grid-cols-2 gap-4 bg-gray-50 p-4 rounded-lg">
        <div>
          <p class="text-gray-500 text-sm font-semibold">Category</p>
          <p class="text-gray-800 font-semibold mt-1">{{ pizzaStock.pizza.category.name ?? 'No Category' }}</p>
        </div>
        <div>
          <p class="text-gray-500 text-sm font-semibold">Price</p>
          <p class="text-[#D62828] font-bold mt-1">‚Ç±{{ pizzaStock.pizza.price|number_format(2, '.', ',') }}</p>
        </div>
        <div>
          <p class="text-gray-500 text-sm font-semibold">Last Restocked</p>
          <p class="text-gray-800 mt-1 text-sm">
            {% if pizzaStock.lastRestocked %}
              {{ pizzaStock.lastRestocked|date('M d, Y H:i') }}
            {% else %}
              Never
            {% endif %}
          </p>
        </div>
        <div>
          <p class="text-gray-500 text-sm font-semibold">Status</p>
          <p class="mt-1">
            {% if pizzaStock.reorderLevel and pizzaStock.quantity <= pizzaStock.reorderLevel %}
              <span class="px-3 py-1 bg-red-100 text-red-700 rounded-full text-sm font-semibold">Low Stock</span>
            {% else %}
              <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-sm font-semibold">In Stock</span>
            {% endif %}
          </p>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex gap-4 pt-4">
        <button 
          type="submit"
          class="flex-1 px-6 py-3 bg-[#D62828] text-white rounded-lg hover:bg-[#B01E1E] transition font-semibold"
        >
          ‚úì Update Stock
        </button>
        <a 
          href="{{ path('app_staff_inventory') }}"
          class="flex-1 px-6 py-3 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition font-semibold text-center"
        >
          Cancel
        </a>
      </div>
    </form>
  </div>
</div>

{% endblock %}
