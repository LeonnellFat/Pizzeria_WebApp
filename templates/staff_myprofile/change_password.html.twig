{% extends '_staff_layout.html.twig' %}

{% block title %}Change Password - Staff Dashboard{% endblock %}

{% block page_title %}Change Password{% endblock %}
{% block page_subtitle %}Update your account password to keep your account secure{% endblock %}

{% block staff_content %}
    <!-- Alerts -->
    {% if app.flashes %}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-6 p-4 rounded-lg {% if type == 'success' %}bg-green-100 text-green-700 border-l-4 border-green-500{% elseif type == 'error' %}bg-red-100 text-red-700 border-l-4 border-red-500{% endif %}">
                    <strong>{{ message }}</strong>
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    <!-- Change Password Container - Centered -->
    <div class="flex justify-center">
        <div class="max-w-5xl w-full">
            <!-- Change Password Card -->
            <div class="bg-white rounded-lg shadow-md p-8">
            <div class="mb-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-2">Enter Your Passwords</h2>
                <p class="text-gray-600 text-sm">For your security, please verify your current password and enter a new one.</p>
            </div>

            {{ form_start(form) }}
                <!-- Current Password Field -->
                <div class="mb-6">
                    {{ form_label(form.currentPassword, 'Current Password', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.currentPassword, {'attr': {'class': 'w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-[#D62828] transition'}}) }}
                    {% if form.currentPassword.vars.errors|length > 0 %}
                        <div class="mt-2 text-red-600 text-sm">
                            {{ form_errors(form.currentPassword) }}
                        </div>
                    {% endif %}
                    <p class="text-gray-500 text-xs mt-2">Enter the password you currently use to sign in</p>
                </div>

                <!-- New Password Field -->
                <div class="mb-6">
                    {{ form_label(form.newPassword.first, 'New Password', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.newPassword.first, {'attr': {'class': 'w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-[#D62828] transition'}}) }}
                    {% if form.newPassword.first.vars.errors|length > 0 %}
                        <div class="mt-2 text-red-600 text-sm">
                            {{ form_errors(form.newPassword.first) }}
                        </div>
                    {% endif %}
                    <p class="text-gray-500 text-xs mt-2">Minimum 6 characters. Use a mix of uppercase, lowercase, numbers, and symbols for security</p>
                </div>

                <!-- Confirm New Password Field -->
                <div class="mb-8">
                    {{ form_label(form.newPassword.second, 'Confirm New Password', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.newPassword.second, {'attr': {'class': 'w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-[#D62828] transition'}}) }}
                    {% if form.newPassword.vars.errors|length > 0 %}
                        <div class="mt-2 text-red-600 text-sm">
                            {{ form_errors(form.newPassword) }}
                        </div>
                    {% endif %}
                </div>

                <!-- Password Requirements Box -->
                <div class="mb-8 bg-gray-50 border-l-4 border-[#D62828] p-6 rounded">
                    <h3 class="font-semibold text-gray-800 mb-3">Password Requirements</h3>
                    <ul class="text-sm text-gray-700 space-y-2">
                        <li>‚úì At least 6 characters long</li>
                        <li>‚úì Mix of uppercase and lowercase letters</li>
                        <li>‚úì Include numbers and special characters</li>
                        <li>‚úì Do not reuse your previous password</li>
                    </ul>
                </div>

                <!-- Buttons -->
                <div class="flex gap-4 justify-center">
                    <button type="submit" class="bg-[#D62828] hover:bg-red-700 text-white font-bold py-3 px-8 rounded-lg transition duration-200 flex items-center gap-2">
                        <span>üîí</span> Change Password
                    </button>
                    <a href="{{ path('app_staff_myprofile') }}" class="bg-gray-400 hover:bg-gray-500 text-white font-bold py-3 px-8 rounded-lg transition duration-200">
                        Cancel
                    </a>
                </div>
            {{ form_end(form) }}
            </div>

            <!-- Security Info Card -->
            <div class="mt-8 bg-blue-50 border-l-4 border-blue-500 rounded-lg p-6">
                <h3 class="text-lg font-bold text-blue-900 mb-4">üîê Security Information</h3>
                <ul class="text-sm text-blue-800 space-y-2">
                    <li>‚úì Your password is encrypted and securely stored</li>
                    <li>‚úì Never share your password with anyone</li>
                    <li>‚úì Change your password if you suspect unauthorized access</li>
                    <li>‚úì Use a unique password that you don't use elsewhere</li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
