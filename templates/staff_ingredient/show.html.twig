{% extends 'base.html.twig' %}

{% block title %}Ingredient{% endblock %}

{% block body %}
    <h1>Ingredient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ ingredient.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ ingredient.type }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ ingredient.price }}</td>
            </tr>
            <tr>
                <th>IsAvailable</th>
                <td>{{ ingredient.isAvailable ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_staff_ingredient_index') }}">back to list</a>

    <a href="{{ path('app_staff_ingredient_edit', {'id': ingredient.id}) }}">edit</a>

    {{ include('staff_ingredient/_delete_form.html.twig') }}
{% endblock %}
