{% extends '_admin_layout.html.twig' %}

{% block title %}Admin Dashboard - Pizzas{% endblock %}

{% block page_title %}Pizza Management{% endblock %}
{% block page_subtitle %}Manage your pizza menu items{% endblock %}

{% block admin_content %}
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-semibold text-gray-800">Pizzas</h2>
        <a href="{{ path('app_pizza_admin_new') }}" 
           class="inline-flex items-center gap-2 bg-[#D62828] text-white font-semibold px-4 py-2 rounded-lg shadow hover:bg-red-700 transition">
          <span class="text-xl font-bold">+</span> Add New Pizza
        </a>
      </div>

      {% if pizzas is not empty %}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {% for pizza in pizzas %}
            <div class="bg-white border border-gray-200 rounded-2xl shadow-sm overflow-hidden hover:shadow-md transition">
              <div class="relative">
                {% if pizza.image %}
                  <img src="{{ asset('assets/' ~ pizza.image) }}" alt="{{ pizza.name }}" class="w-full h-56 object-cover">
                {% else %}
                  <div class="w-full h-56 bg-gray-200 flex items-center justify-center text-gray-500">No Image</div>
                {% endif %}

                {% if pizza.isAvailable %}
                  <span class="absolute top-3 right-3 bg-green-500 text-white text-sm font-semibold px-3 py-1 rounded-full shadow">Available</span>
                {% else %}
                  <span class="absolute top-3 right-3 bg-red-500 text-white text-sm font-semibold px-3 py-1 rounded-full shadow">Unavailable</span>
                {% endif %}
              </div>

              <div class="p-5">
                <h3 class="text-lg font-semibold text-gray-900">{{ pizza.name }}</h3>
                <p class="text-gray-500 text-sm mb-3">{{ pizza.description }}</p>

                <div class="flex justify-between items-center mb-3">
                  <span class="text-sm bg-gray-100 text-gray-700 px-3 py-1 rounded-full">
                    {{ pizza.category ? pizza.category.name : 'Uncategorized' }}
                  </span>
                  <span class="text-[#D62828] font-bold">‚Ç±{{ pizza.price }}</span>
                </div>

                <div class="space-y-3">
                  {% if pizza.createdBy %}
                    <div class="px-3 py-1 bg-blue-100 text-blue-700 rounded text-center text-sm font-medium">
                      üë§ Created by: {{ pizza.createdBy.username }}
                    </div>
                  {% endif %}
                  
                  <div class="flex justify-between items-center gap-2">
                    <a href="{{ path('app_pizza_admin_edit', {'id': pizza.id}) }}"
                       class="flex items-center justify-center gap-2 w-1/2 border border-gray-300 rounded-lg py-2 text-gray-700 hover:bg-gray-100 transition">
                      ‚úèÔ∏è Edit
                    </a>

                    <form method="post" 
                          action="{{ path('app_pizza_admin_delete', {'id': pizza.id}) }}" 
                          onsubmit="return confirm('Are you sure you want to delete this pizza?');"
                          class="w-1/2">
                      <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pizza.id) }}">
                      <button class="flex items-center justify-center gap-2 w-full border border-red-500 text-red-600 rounded-lg py-2 hover:bg-red-50 transition">
                        üóëÔ∏è Delete
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <p class="text-center text-gray-500 mt-10">No pizzas found.</p>
      {% endif %}
{% endblock %}
