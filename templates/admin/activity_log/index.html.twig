{% extends '_admin_layout.html.twig' %}

{% block title %}Activity Logs{% endblock %}

{% block page_title %}Activity Logs{% endblock %}
{% block page_subtitle %}View and filter system activity logs{% endblock %}

{% block stylesheets %}
  {{ parent() }}
{% endblock %}

{% block admin_content %}
<div class="space-y-6">
  <!-- Filter Section -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">Filters</h3>
    
    <form method="GET" class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <!-- Username Filter -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Username</label>
        <input type="text" name="filterUser" value="{{ filterUser }}" placeholder="Search username..." 
               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#D62828]">
      </div>

      <!-- Date Filter -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Date</label>
        <input type="date" name="filterDate" value="{{ filterDate }}" 
               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#D62828]">
      </div>

      <!-- Submit Button -->
      <div class="flex items-end">
        <button type="submit" class="w-full bg-[#D62828] text-white font-semibold px-4 py-2 rounded-lg hover:bg-red-700 transition">
          Filter
        </button>
      </div>
    </form>
  </div>

  <!-- Logs Table -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="px-6 py-4 bg-gray-50 border-b">
      <h3 class="text-lg font-semibold text-gray-800">All Activity Logs ({{ total }} total)</h3>
    </div>

    {% if logs is not empty %}
      <div class="overflow-x-auto">
        <table id="activityLogsTable" class="w-full display">
          <thead>
            <tr>
              <th>User ID</th>
              <th>Username</th>
              <th>Role</th>
              <th>Action</th>
              <th>Affected Data</th>
              <th>Date & Time</th>
              <th>IP Address</th>
            </tr>
          </thead>
          <tbody>
            {% for log in logs %}
              <tr>
                <td>
                  {% if log.userId %}
                    <span class="font-semibold text-[#D62828]">{{ log.userId.id }}</span>
                  {% else %}
                    <span class="text-gray-400 italic">System</span>
                  {% endif %}
                </td>
                <td>
                  <span class="font-medium">{{ log.username }}</span>
                </td>
                <td>
                  {% set roles = log.role|split(', ') %}
                  {% set primaryRole = '' %}
                  {% for role in roles %}
                    {% if role == 'ROLE_ADMIN' %}
                      {% set primaryRole = 'ROLE_ADMIN' %}
                    {% elseif role == 'ROLE_STAFF' and primaryRole != 'ROLE_ADMIN' %}
                      {% set primaryRole = 'ROLE_STAFF' %}
                    {% elseif role != 'ROLE_USER' and primaryRole == '' %}
                      {% set primaryRole = role %}
                    {% endif %}
                  {% endfor %}
                  {% set badgeBg = 'bg-red-100 text-red-800' %}
                  {% if primaryRole == 'ROLE_STAFF' %}
                    {% set badgeBg = 'bg-yellow-100 text-yellow-800' %}
                  {% endif %}
                  {% set displayRole = primaryRole ? primaryRole : 'ROLE_USER' %}
                  <span class="px-3 py-1 rounded-full {{ badgeBg }} text-xs font-medium">
                    {{ displayRole }}
                  </span>
                </td>
                <td>
                  {% set actionColor = 'bg-green-100 text-green-800' %}
                  {% if log.action == 'UPDATE' %}
                    {% set actionColor = 'bg-yellow-100 text-yellow-800' %}
                  {% elseif log.action == 'DELETE' %}
                    {% set actionColor = 'bg-red-100 text-red-800' %}
                  {% elseif log.action == 'LOGIN' %}
                    {% set actionColor = 'bg-blue-100 text-blue-800' %}
                  {% elseif log.action == 'LOGOUT' %}
                    {% set actionColor = 'bg-gray-100 text-gray-800' %}
                  {% endif %}
                  <span class="px-3 py-1 rounded-full {{ actionColor }} text-xs font-medium">
                    {{ log.action }}
                  </span>
                </td>
                <td>
                  {{ log.targetData }}
                </td>
                <td>
                  {{ log.dateTime ? log.dateTime.format('m/d/Y H:i') : 'N/A' }}
                </td>
                <td>
                  <code class="bg-gray-100 px-2 py-1 rounded text-xs">{{ log.ipAddress ?? 'N/A' }}</code>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>

    {% else %}
      <div class="px-6 py-12 text-center text-gray-500">
        <p class="text-lg">No activity logs found.</p>
      </div>
    {% endif %}
  </div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  
  <script>
    $(document).ready(function() {
      $('#activityLogsTable').DataTable({
        responsive: true,
        pageLength: 10,
        order: [],
        ordering: true,
        lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
        dom: '<"datatable-header"<"datatable-controls"lf>>t<"datatable-footer"<"datatable-info"i><"datatable-pagination"p>>',
        language: {
          lengthMenu: "Show _MENU_ entries",
          search: "Search:",
          info: "Showing _START_ to _END_ of _TOTAL_ entries",
          paginate: {
            previous: "Previous",
            next: "Next"
          }
        }
      });
    });
  </script>
{% endblock %}