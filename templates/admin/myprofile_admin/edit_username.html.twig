{% extends '_admin_layout.html.twig' %}

{% block title %}Edit Username - Admin Dashboard{% endblock %}

{% block page_title %}Edit Username{% endblock %}
{% block page_subtitle %}Change your account username{% endblock %}

{% block admin_content %}
    <!-- Alerts -->
    {% if app.flashes %}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-6 p-4 rounded-lg {% if type == 'success' %}bg-green-100 text-green-700 border-l-4 border-green-500{% elseif type == 'error' %}bg-red-100 text-red-700 border-l-4 border-red-500{% endif %}">
                    <strong>{{ message }}</strong>
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    <!-- Edit Username Container - Centered -->
    <div class="flex justify-center">
        <div class="max-w-5xl w-full">
            <!-- Edit Username Card -->
            <div class="bg-white rounded-lg shadow-md p-8">
            <div class="mb-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-2">Change Your Username</h2>
                <p class="text-gray-600 text-sm">Enter a new username for your account. Your username must be at least 3 characters long.</p>
            </div>

            {{ form_start(form) }}
                <!-- Username Field -->
                <div class="mb-8">
                    {{ form_label(form.username, 'New Username', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.username, {'attr': {'class': 'w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-[#D62828] transition'}}) }}
                    {% if form.username.vars.errors|length > 0 %}
                        <div class="mt-2 text-red-600 text-sm">
                            {{ form_errors(form.username) }}
                        </div>
                    {% endif %}
                    <p class="text-gray-500 text-xs mt-2">Username must be 3-180 characters long</p>
                </div>

                <!-- Information Box -->
                <div class="mb-8 bg-blue-50 border-l-4 border-blue-500 p-6 rounded">
                    <h3 class="font-semibold text-blue-900 mb-3">⚠️ Important Information</h3>
                    <ul class="text-sm text-blue-800 space-y-2">
                        <li>✓ Your username is used to sign in to your account</li>
                        <li>✓ Choose a unique username that is easy to remember</li>
                        <li>✓ Avoid using personal information in your username</li>
                        <li>✓ Username must be unique across the system</li>
                    </ul>
                </div>

                <!-- Buttons -->
                <div class="flex gap-4 justify-center">
                    <button type="submit" class="bg-[#D62828] hover:bg-red-700 text-white font-bold py-3 px-8 rounded-lg transition duration-200">
                        Change Username
                    </button>
                    <a href="{{ path('app_myprofile_admin') }}" class="bg-gray-400 hover:bg-gray-500 text-white font-bold py-3 px-8 rounded-lg transition duration-200">
                        Cancel
                    </a>
                </div>
            {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}