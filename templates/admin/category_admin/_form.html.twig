{{ form_start(form) }}
  <!-- Category Name -->
  <div class="mb-4">
    {{ form_label(form.name, 'Category Name', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
    {{ form_widget(form.name, {'attr': {'class': 'w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#D62828]'}}) }}
  </div>

  <!-- Description -->
  <div class="mb-6">
    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-2'}}) }}
    {{ form_widget(form.description, {'attr': {'class': 'w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#D62828]'}}) }}
  </div>

  <!-- Buttons -->
  <div class="flex justify-end gap-3">
    <a href="{{ path('app_category_admin_index') }}"
       class="px-5 py-2 rounded-md border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
      Cancel
    </a>
    <button class="px-5 py-2 rounded-md bg-[#D62828] text-white font-semibold hover:bg-red-700 transition">
      {{ button_label|default('Create Category') }}
    </button>
  </div>
{{ form_end(form) }}
