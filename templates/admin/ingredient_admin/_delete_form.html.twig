<form method="post" 
      action="{{ path('app_ingredient_admin_delete', {'id': ingredient.id}) }}" 
      onsubmit="return confirm('Are you sure you want to delete this ingredient?');"
      class="inline">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ingredient.id) }}">
  <button class="p-2 rounded-md border border-red-500 text-red-600 hover:bg-red-100 transition" title="Delete Ingredient">
    🗑️
  </button>
</form>
