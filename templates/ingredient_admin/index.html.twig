{% extends '_admin_layout.html.twig' %}

{% block title %}Admin Dashboard - Ingredients{% endblock %}

{% block page_title %}Ingredient Management{% endblock %}
{% block page_subtitle %}Manage your pizza ingredients{% endblock %}

{% block admin_content %}
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-semibold text-gray-800">Ingredients</h2>
        <a href="{{ path('app_ingredient_admin_new') }}" 
           class="inline-flex items-center gap-2 bg-[#D62828] text-white font-semibold px-4 py-2 rounded-lg shadow hover:bg-red-700 transition">
          <span class="text-xl font-bold">+</span> Add New Ingredient
        </a>
      </div>

      {% if ingredients is empty %}
        <p class="text-center text-gray-500 mt-6">No ingredients found.</p>
      {% else %}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {% for ingredient in ingredients %}
            <div class="bg-white border border-gray-200 rounded-2xl shadow-sm overflow-hidden hover:shadow-md transition p-5">
              <!-- Name and Price -->
              <div class="flex justify-between items-start mb-3">
                <h3 class="text-lg font-semibold text-gray-900">{{ ingredient.name }}</h3>
                <span class="text-[#D62828] font-semibold">â‚±{{ ingredient.price|number_format(0) }}</span>
              </div>

              <!-- Type and Availability -->
              <div class="flex gap-2 mb-4">
                <span class="px-3 py-1 rounded-full bg-blue-100 text-blue-700 text-sm font-medium">
                  {{ ingredient.type }}
                </span>
                {% if ingredient.isAvailable %}
                  <span class="px-3 py-1 rounded-full bg-green-100 text-green-700 text-sm font-medium">Available</span>
                {% else %}
                  <span class="px-3 py-1 rounded-full bg-red-100 text-red-700 text-sm font-medium">Unavailable</span>
                {% endif %}
              </div>

              <!-- Actions -->
              <div class="flex justify-between items-center gap-2">
                <a href="{{ path('app_ingredient_admin_edit', {'id': ingredient.id}) }}" 
                   class="flex items-center justify-center gap-2 w-1/2 border border-gray-300 rounded-lg py-2 text-gray-700 hover:bg-gray-100 transition">
                  âœï¸ Edit
                </a>

                <form method="post" 
                      action="{{ path('app_ingredient_admin_delete', {'id': ingredient.id}) }}" 
                      onsubmit="return confirm('Are you sure you want to delete this ingredient?');"
                      class="w-1/2">
                  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ingredient.id) }}">
                  <button class="flex items-center justify-center gap-2 w-full border border-red-500 text-red-600 rounded-lg py-2 hover:bg-red-50 transition">
                    ğŸ—‘ï¸ Delete
                  </button>
                </form>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
{% endblock %}
