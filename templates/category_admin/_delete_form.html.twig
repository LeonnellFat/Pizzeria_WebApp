<form method="post" 
      action="{{ path('app_category_admin_delete', {'id': category.id}) }}" 
      onsubmit="return confirm('Are you sure you want to delete this category?');"
      class="inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="p-2 rounded-md border border-red-500 text-red-600 hover:bg-red-100 transition" title="Delete Category">
        🗑️
    </button>
</form>
