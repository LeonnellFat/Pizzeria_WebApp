{% extends 'base_admin.html.twig' %}

{% block title %}Admin Dashboard - Categories{% endblock %}

{% block body %}
<div class="min-h-screen flex bg-gray-50">

  <!-- Sidebar -->
  <aside class="w-64 bg-white shadow-lg border-r">
    <div class="p-6 border-b">
      <h1 class="text-2xl font-bold text-[#D62828]">Admin Dashboard</h1>
      <p class="text-gray-500 text-sm mt-1">Manage your pizzeria</p>
    </div>

    <nav class="mt-6 flex flex-col space-y-2 px-4">
      <!-- Pizza Management -->
      <a href="{{ path('app_pizza_admin_index') }}"
         class="flex items-center gap-3 px-4 py-3 rounded-lg font-semibold transition
                {{ app.request.attributes.get('_route') starts with 'app_pizza_admin'
                   ? 'bg-[#D62828] text-white shadow'
                   : 'text-gray-700 hover:bg-gray-100' }}">
        ğŸ• Pizza Management
      </a>

      <!-- Category Management -->
      <a href="{{ path('app_category_admin_index') }}"
         class="flex items-center gap-3 px-4 py-3 rounded-lg font-semibold transition
                {{ app.request.attributes.get('_route') starts with 'app_category_admin'
                   ? 'bg-[#D62828] text-white shadow'
                   : 'text-gray-700 hover:bg-gray-100' }}">
        ğŸ·ï¸ Category Management
      </a>

      <!-- Ingredient Management -->
      <a href="{{ path('app_ingredient_admin_index') }}"
         class="flex items-center gap-3 px-4 py-3 rounded-lg font-semibold transition
                {{ app.request.attributes.get('_route') starts with 'app_ingredient_admin'
                   ? 'bg-[#D62828] text-white shadow'
                   : 'text-gray-700 hover:bg-gray-100' }}">
        ğŸ§‚ Ingredient Management
      </a>
    </nav>
  </aside>

  <!-- Main Content -->
  <main class="flex-1">
    <!-- Header -->
    <header class="bg-[#D62828] text-white py-8 px-10 shadow">
      <h1 class="text-4xl font-bold mb-1">Category Management</h1>
      <p class="text-white/90 text-lg">Manage your pizza categories</p>
    </header>

    <!-- Category Cards Section -->
    <section class="max-w-7xl mx-auto mt-8 px-6">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-semibold text-gray-800">Categories</h2>
        <a href="{{ path('app_category_admin_new') }}" 
           class="inline-flex items-center gap-2 bg-[#D62828] text-white font-semibold px-4 py-2 rounded-lg shadow hover:bg-red-700 transition">
          <span class="text-xl font-bold">+</span> Add New Category
        </a>
      </div>

      {% if categories is not empty %}
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          {% for category in categories %}
            <div class="bg-white border border-gray-200 rounded-2xl shadow-sm overflow-hidden hover:shadow-md transition">
              <div class="p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">{{ category.name }}</h3>
                <p class="text-gray-500 text-sm mb-4">
                  {{ category.description ? category.description : 'No description available.' }}
                </p>

                <div class="flex justify-between items-center gap-2">
                  <a href="{{ path('app_category_admin_edit', {'id': category.id}) }}"
                     class="flex items-center justify-center gap-2 w-1/2 border border-gray-300 rounded-lg py-2 text-gray-700 hover:bg-gray-100 transition">
                    âœï¸ Edit
                  </a>

                  <form method="post"
                        action="{{ path('app_category_admin_delete', {'id': category.id}) }}"
                        onsubmit="return confirm('Are you sure you want to delete this category?');"
                        class="w-1/2">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                    <button class="flex items-center justify-center gap-2 w-full border border-red-500 text-red-600 rounded-lg py-2 hover:bg-red-50 transition">
                      ğŸ—‘ï¸ Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <p class="text-center text-gray-500 mt-10">No categories found.</p>
      {% endif %}
    </section>
  </main>
</div>
{% endblock %}
