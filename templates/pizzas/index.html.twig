{% extends 'base.html.twig' %}

{% block title %}Our Pizzas - Lee's Pizzeria{% endblock %}

{% block body %}
<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-6">
    <h2 class="text-5xl font-normal text-[#D62828] mb-10 text-center" style="font-family: 'Lobster', cursive;">
      Our Signature Pizzas
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      {% for pizza in pizzas %}
        <div class="bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-xl transition-shadow">
          {% if pizza.image %}
            <img src="{{ asset('assets/' ~ pizza.image) }}" alt="{{ pizza.name }}" class="h-56 w-full object-cover">
          {% else %}
            <div class="bg-gray-200 h-56 flex items-center justify-center text-gray-400 text-sm">No Image</div>
          {% endif %}
          <div class="p-4">
            <h3 class="text-lg font-semibold text-gray-800">{{ pizza.name }}</h3>
            <p class="text-gray-600 mt-2">{{ pizza.description }}</p>
            <p class="text-[#D62828] font-bold mt-3">â‚±{{ pizza.price }}</p>
          </div>
        </div>
      {% else %}
        <p class="col-span-full text-center text-gray-500">No pizzas available right now.</p>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock %}
